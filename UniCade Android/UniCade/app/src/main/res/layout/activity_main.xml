<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ben.unicade.MainActivity"
    android:gravity="top|start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date:"
        android:id="@+id/textView"
        android:layout_marginTop="96dp"
        android:layout_alignTop="@+id/listView"
        android:layout_alignEnd="@+id/button"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button"
        android:layout_marginRight="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESRB:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button"
        android:layout_marginRight="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Games:"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Console Games:"
        android:id="@+id/textView7"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:visibility="visible"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button"
        android:onClick="launchSettings"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <ListView
        android:layout_width="142dp"
        android:layout_height="380dp"
        android:id="@+id/listView"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/button"
        android:layout_marginRight="47dp" />

    <Button
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:text="Load Databse"
        android:id="@+id/button2"
        android:layout_gravity="right|center_vertical"
        android:textSize="10dp"
        android:onClick="loadDatabase"
        android:nestedScrollingEnabled="true"
        android:layout_row="28"
        android:layout_column="10"
        android:layout_below="@+id/listView"
        android:layout_toEndOf="@+id/listView" />

</RelativeLayout>
