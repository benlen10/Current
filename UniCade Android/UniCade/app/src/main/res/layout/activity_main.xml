<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ben.unicade.MainActivity"
    android:gravity="top|start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date:"
        android:id="@+id/textView"
        android:layout_marginTop="84dp"
        android:layout_alignTop="@+id/listView"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher:"
        android:id="@+id/textView2"
        android:layout_marginRight="47dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESRB:"
        android:id="@+id/textView3"
        android:layout_marginRight="47dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Games:"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Games:"
        android:id="@+id/textView7"
        android:layout_above="@+id/spinner"
        android:layout_alignEnd="@+id/textView6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:visibility="visible"
        android:layout_above="@+id/button"
        android:layout_toEndOf="@+id/listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button"
        android:onClick="launchSettings"
        android:layout_below="@+id/listView"
        android:layout_toEndOf="@+id/button5" />

    <ListView
        android:layout_width="142dp"
        android:layout_height="380dp"
        android:id="@+id/listView"
        android:layout_gravity="left|top"
        android:layout_alignTop="@+id/result"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:id="@+id/textView4"
        android:layout_marginRight="47dp"
        android:layout_below="@+id/result"
        android:layout_toEndOf="@+id/listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:id="@+id/button5"
        android:onClick="launchInfoWindow"
        android:layout_below="@+id/listView"
        android:layout_toEndOf="@+id/result" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView7"
        android:visibility="visible"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>
