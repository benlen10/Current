<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title: "
        android:id="@+id/textView5"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="showInputDialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Console: "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Release Date"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/textView9"
        android:onClick="editRelease" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Publisher:"
        android:id="@+id/textView11"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="17dp"
        android:onClick="editPublisher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Critic Score: "
        android:id="@+id/textView12"
        android:layout_above="@+id/textView13"
        android:layout_alignStart="@+id/textView11"
        android:onClick="editScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Players"
        android:id="@+id/textView13"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/textView12"
        android:onClick="editPlayers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ESRB Rating: "
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="26dp"
        android:onClick="editEsrb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ESRB Descriptors"
        android:id="@+id/textView15"
        android:layout_above="@+id/textView16"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginBottom="23dp"
        android:onClick="editEsrbDescriptors" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:onClick="closeInfoWindow" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:id="@+id/checkBox"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Launch Count:"
        android:id="@+id/textView16"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignStart="@+id/textView15"
        android:onClick="editLaunchCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView17"
        android:layout_above="@+id/checkBox"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginBottom="35dp"
        android:onClick="editDescription" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/textView16" />

</RelativeLayout>